<%= form_with(model: todo_list, local: true) do |form| %>
    <% if todo_list.errors.any? %>
        <div id="error_explanation">
            <h2 class="title is-5"><%= pluralize(todo_list.errors.count, "error") %> prohibited this todo_list from
                being
                saved:</h2>

            <ul>
                <% todo_list.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="field">
        <%= form.label :title, :class => 'label' %>
        <%= form.text_field :title, :class => 'input' %>
