    <div class="field">
        <%= form.label :description, :class => 'label' %>
        <%= form.text_area :description, :class => 'textarea' %>
    </div>

    <div class="actions">
        <%= form.submit 'Create Todo List', :class => 'button is-link' %>
    </div>
<% end %>
